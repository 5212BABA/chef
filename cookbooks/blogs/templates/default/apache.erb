<VirtualHost *:80>
   ServerName <%= @name %>
   ServerAdmin webmaster@openstreetmap.org

   CustomLog /var/log/apache2/<%= @name %>-access.log combined
   ErrorLog /var/log/apache2/<%= @name %>-error.log

   Redirect permanent / https://<%= @name %>/
</VirtualHost>

<VirtualHost *:443>
   ServerName <%= @name %>
   ServerAdmin webmaster@openstreetmap.org

   CustomLog /var/log/apache2/<%= @name %>-access.log combined
   ErrorLog /var/log/apache2/<%= @name %>-error.log

   DocumentRoot <%= @directory %>

   SSLEngine on
</VirtualHost>

<Directory <%= @directory %>>
   Require all granted
</Directory>
